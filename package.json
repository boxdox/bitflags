{
  "name": "@boxdox/bitflags",
  "version": "0.0.2",
  "description": "a type-safe, dependency-free bit-flag library",
  "keywords": [
    "bitflags",
    "typescript"
  ],
  "homepage": "https://github.com/boxdox/bitflags",
  "bugs": {
    "url": "https://github.com/boxdox/bitflags/issues"
  },
  "author": "boxdox <hi@boxdox.dev>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boxdox/bitflags.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean",
    "dev": "bun run src/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5"
  }
}
